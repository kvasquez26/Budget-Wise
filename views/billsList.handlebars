<h2>Your Bills</h2>

{{#if bills.length}}
<ul class="list-group">
    {{#each bills}}
    <li class="list-group-item">
        <strong>{{this.serviceName}}</strong> — ${{this.amount}} — Due {{this.dueDate}}
        <a href="/bills/edit/{{this._id}}" class="btn btn-sm btn-warning pull-right">Edit</a>
    </li>
    {{/each}}
</ul>
{{else}}
<p>No bills added yet.</p>
{{/if}}
