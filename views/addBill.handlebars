<h2>Add Bill</h2>

{{#if error}}
<div class="alert alert-danger">{{error}}</div>
{{/if}}

<form action="/bills/add" method="POST">
    <div class="form-group">
        <label>Service Name</label>
        <input class="form-control" name="serviceName" value="{{serviceName}}" required>
    </div>

    <div class="form-group">
        <label>Amount</label>
        <input class="form-control" type="number" name="amount" value="{{amount}}" required>
    </div>

    <div class="form-group">
        <label>Due Date</label>
        <input class="form-control" type="date" name="dueDate" value="{{dueDate}}" required>
    </div>

    <div class="form-group">
        <label>Notes</label>
        <textarea class="form-control" name="notes">{{notes}}</textarea>
    </div>

    <button class="btn btn-primary">Add Bill</button>
</form>
