<head>
  <!-- Page-specific CSS -->
  <link rel="stylesheet" href="/public/css/budget.css" />
</head>

<main class="budget-page">
  <section class="header-section">
    <h1 class="page-title">Set Your Monthly Budget</h1>
    <p class="description">
      Enter your monthly spending limit - BudgetWise will track your progress and help you stay on top of your finances.
    </p>
  </section>

  {{#if error}}
  <section class="error-section">
    <p class="error-message">{{error}}</p>
  </section>
  {{/if}}

  {{#if budget}}
    <section class="current-budget">
        <h2>Your Current Budget</h2>
        <p class="current-budget-amount">
            ${{budget.totalBudget}}
        </p>
        </section>
  {{/if}}

  <section class="budget-form-section">
    <form method="POST" action="/budget" class="budget-form">
        <label for="totalBudget">Total Monthly Budget</label>

        <input
            id="totalBudget"
            name="totalBudget"
            type="number"
            min="0"
            step="0.01"
            value="{{#if budget}}{{budget.totalBudget}}{{/if}}"
            required
        />
        <button type="submit" class="submit-button">Save Budget</button>
    </form>
</section>

<section class="nav-section">
    <a href="/dashboard" class="back-link">&larr; Back to Dashboard</a>
</section>

</main>