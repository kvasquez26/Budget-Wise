<h2>Edit Bill</h2>

{{#if error}}
<div class="alert alert-danger">{{error}}</div>
{{/if}}

<form action="/bills/edit/{{bill._id}}" method="POST">
    <div class="form-group">
        <label>Service Name</label>
        <input class="form-control" name="serviceName" value="{{bill.serviceName}}" required>
    </div>

    <div class="form-group">
        <label>Amount</label>
        <input class="form-control" type="number" name="amount" value="{{bill.amount}}" required>
    </div>

    <div class="form-group">
        <label>Due Date</label>
        <input class="form-control" type="date" name="dueDate" value="{{bill.dueDate}}" required>
    </div>

    <div class="form-group">
        <label>Notes</label>
        <textarea class="form-control" name="notes">{{bill.notes}}</textarea>
    </div>

    <button class="btn btn-primary">Update Bill</button>
</form>
